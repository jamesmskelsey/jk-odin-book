<div class="well">
  <%= form_for @post, html: {class: "form-vertical"} do |f|%>
    <%= f.hidden_field :author_id, value: current_user.id %>
    <div class="form-group">
      <%= f.text_field :content, class: "form-control", placeholder: "Share your thoughts..." %>
    </div>
    <div class="form-group">
      <%= f.submit "Share", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

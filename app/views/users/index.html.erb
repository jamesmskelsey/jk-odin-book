<div class="container">
  <div class="row">

      <% @users.each do |user| %>
        <div class="col-md-12 panel">
          <h2><%= link_to user.email, user_path(user) %></h2>
          <% if !friendship_exists?(current_user, user).nil? %>
            <%= link_to "Add Friend", user_friendships_path(current_user, :id => user.id), method: "post", class: "btn btn-success" %>
          <% else %>
            <%= link_to "Unfriend", user_friendship_path(current_user, :id => user.id), method: "delete", class: "btn btn-danger" %>
          <% end %>

        </div>
      <% end %>

  </div>
</div>
